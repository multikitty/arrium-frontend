{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017", "es2021"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "useDefineForClassFields": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src/**/*", "gatsby-ssr.js", "gatsby-browser.js"]
}
